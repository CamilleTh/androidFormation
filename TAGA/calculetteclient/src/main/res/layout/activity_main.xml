<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/num2"
            android:layout_below="@+id/resultat"
            android:layout_gravity="center"
            android:hint="Saisir nombre 1"
            android:inputType="numberSigned|numberDecimal"
            android:paddingTop="10dp"
            android:singleLine="false" />

        <EditText
            android:id="@+id/num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/num1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="58dp"
            android:hint="Saisir nombre 2"
            android:inputType="numberSigned|numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/plusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/resultat"
                android:layout_centerHorizontal="true"
                android:inputType=""
                android:text="+"
                android:visibility="visible" />

            <Button
                android:id="@+id/moinsbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:visibility="visible" />

            <Button
                android:id="@+id/diviseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="Resultat" />

            <TextView
                android:id="@+id/resultat"
                android:layout_width="309dp"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@+id/plusButton"
                android:layout_alignParentTop="true"
                android:text="@string/resultat" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
